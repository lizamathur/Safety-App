<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lizamathur.safetyring.ActivityRegister"
    android:background="@drawable/bg0"
    android:alpha=".8">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:id="@+id/rName"
        android:hint="Full Name"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/rMail"
        android:hint="Email ID"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/rName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:id="@+id/rNumber"
        android:hint="Mobile Number"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/rMail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:maxLength="10"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:digits="0123456789" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/rPass"
        android:hint="4 Digits PIN"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:digits="0123456789"
        android:maxLength="4" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="numberPassword"
        android:ems="10"
        android:id="@+id/rcPass"
        android:hint="Re-Enter PIN"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/rPass"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true"
        android:imeOptions="actionDone"
        android:maxLength="4"
        android:digits="0123456789" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/bRegister"
        android:layout_below="@+id/rcPass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:background="#4cf1dd"
        android:onClick="changeActivitytoC1"/>

    <ProgressBar
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rNumber"
        android:layout_centerHorizontal="true"
        android:id="@+id/progressBar"
        android:visibility="invisible"/>

</RelativeLayout>
